{{> head }}
<section class="container">
    <div class="row">
        <section class="col-12 justify-content-end d-flex mt-3">
            <a href="/admin" class="btn btn-violeta">Inicio</a>
        </section>
        <section class="col-12">
            <h3 class="p-3 my-3 bg-dark text-white rounded-3">Panel de productos</h3>
            <div class="text-end mb-3">
                <a href="/producto/crear" class="btn btn-success"><i class="fas fa-plus"></i> Agregar
                    Producto</a>
            </div>

            <form action="" class="row justify-content-center" id="buscarProducto">
                <div class="col-12 col-sm-8 col-md-4 d-flex">
                    <input type="text" class="form-control" name='nombre' placeholder='Buscar producto' required>
                    <button class="btn btn-violeta px-4">
                        <i class="fas fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </form>



            <article class='table-responsive my-3'>
                <table class="table table-striped table-bordered text-center">
                    <thead>
                        <tr class='bg-dark text-white'>
                            <th scope='col' class="d-none d-md-table-cell">##</th>
                            <th scope='col'>Nombre</th>
                            <th scope='col' class="d-none d-md-table-cell">Subcategoria</th>
                            <th scope='col'>Stock</th>
                            <th scope='col'>Precio</th>
                            <th scope='col' class="d-none d-md-table-cell">Costo</th>
                            <th scope='col'>Accion</th>
                        </tr>
                    </thead>
                    <tbody id="tablaProducto"></tbody>
                </table>
            </article>
        </section>
    </div>

</section>

<script>
    funcionBuscarProductoParaTabla();
</script>

{{> footer }}