
{{> head }}

    {{> modal }}
    {{> modalLogin}}
        <section class="max1400 flex-contenedor">
            <section class="encabezado">
                <div>
                    <i class="fa fa-arrow-circle-right"></i>
                    <a>Resultado</a> 
                </div>
                <div>
                    <select name="ordenar" id="ordenar">
                        <option value="">Ordenar por</option>
                        <option value="/producto/buscar/palabra={{ URLPalabra }}/idcat={{ URLidCat }}/idsub={{ URLidSub }}/idmarca={{ URLMarca }}/orden=1">Menor-precio</option>
                        <option value="/producto/buscar/palabra={{ URLPalabra }}/idcat={{ URLidCat }}/idsub={{ URLidSub }}/idmarca={{ URLMarca }}/orden=2">Mayor precio</option>
                    </select>
                    <a id="botonVistaCuadricula"><i class='fas fa-th encabezado--grande verde'></i></a>
                    <a id="botonVistaFila"><i class='fas fa-align-justify encabezado--grande verde'></i></a>
                </div>
            </section>
            <!--************ASIDE CATEGORIA**********-->
            <aside class="categoria">
                <ul class="categoria__especificacion">
                    <li class="categoria__especificacion--verde">Categoria</li>
                    <li>
                        {{#each categoriasDB}}
                        <a href="/producto/buscar/palabra={{ ../URLPalabra }}/idcat={{ IdCategoria }}/idsub={{ ../URLidSub }}/idmarca={{ ../URLMarca }}/orden=-1" class="categoria__especificacion__link">{{ Nombre }} ( {{ Cantidad }} )</a>
                        {{/each}}
                    </li>
                </ul>
                <ul class="categoria__especificacion">
                    <li class="categoria__especificacion--verde">Subategoria</li>
                    <li>
                        {{#each subcategoriasDB}}
                        <a href="/producto/buscar/palabra={{ ../URLPalabra }}/idcat={{ ../URLidCat }}/idsub={{ IdSubcategoria }}/idmarca={{ ../URLMarca }}/orden=-1" class="categoria__especificacion__link">{{ Nombre }} ( {{ Cantidad }} )</a>
                        {{/each}}
                    </li>
                </ul>
                <ul class="categoria__especificacion">
                    <li class="categoria__especificacion--verde">Marca</li>
                    <li>
                        {{#each marcasDB}}
                        <a href="/producto/buscar/palabra={{ ../URLPalabra }}/idcat={{ ../URLidCat }}/idsub={{ ../URLidSub }}/idmarca={{ IdMarca }}/orden=-1" class="categoria__especificacion__link">{{ Nombre }} ( {{ Cantidad }} )</a>
                        {{/each}}
                    </li>
                </ul>
            </aside>
            <!--************SECCION PRODUCTOS**********-->
            <section class="flex-contenedor-start lista-productos">
                {{#each productosDB }}
                <figure class="producto productoEstandar">
                    <a href="/product/profile/{{ IdProducto }}" class="producto__interaccionArticulo">
                        <img src="/assets/img/producto/{{ Img }}" class="producto__img" name="imgProducto">
                        <span class="producto__mas-info">[MÁS INFO]</span>
                        <h4 name="nombreProducto" data-id={{ IdProducto }}>{{ Nombre }}</h4>
                    </a>
                    <figcaption>
                        <h4 class="producto__precio">ARS <span name="precioProducto">{{ Precio }}</span></h4>
                        <a class="botonAgregarProducto campoBoton campoBoton--negro" style="display:none">AGREGAR</a>
                    </figcaption>
                </figure>
                {{ else }}
                <p class="textoCentro">* No hay resultados para esta busqueda *</p>
                {{/each}}
            </section>
        </section>

    <script>
        ordenarProductos();
        leerVistaDeArticulos();
        eventoCambiarVistaProducto();
        funcionParaQueElArticuloSeOpaqueYAparezcaMasInfo();
        eventoAñadirProducto()
    </script>
{{> footer }}