{{> head }}

    {{> modal }}

    <section class="max1400">
        <h3 class="titular">Pedido NÂ° {{ pedido.id }}</h3>
        <section class="max1400">
            <p class="caracteristicas__titulo">Fecha del pedido: {{ pedido.fecha }}</p>
            <br/>
            <br/>
            <p class="caracteristicas__titulo">Medio de pago: {{ pedido.medios_pago }} efectivo</p>
            <br/>
