{{>head}}
    
    <section class="max1400">
        <form id="productForm" method="POST" action="/product/update/{{productoDB._id}}" class="flex-contenedor" enctype="multipart/form-data">
            <figure class="galeria__figure">
                <img src="/assets/img/{{productoDB.img}}" class="galeria__figure--tamanioPerfil" id="imagenProducto">
                <button type="button" id="botonInputFileEstilizado" class="campoBoton campoBoton--azul">Editar foto</button>
                <input type="file" name="imagen" id="elegirFoto">
            </figure>
            <article class="caracteristicas">
                <section>
                    <label for="nombre" class="formulario__label">Nombre</label>
                    <input type="text" name="nombre" id="nombre" class="campo-imput formulario__input" value="{{productoDB.nombre}}">
                    <label for="categoria" class="formulario__label">Categoria</label>
                    <input type="text" name="categoria" id="categoria" class="campo-imput formulario__input" value="{{productoDB.categoria}}">
                    <label for="marca" class="formulario__label">Marca</label>
                    <input type="text" name="marca" id="marca" class="campo-imput formulario__input" value="{{productoDB.marca}}">            
                    <label for="codigo" class="formulario__label">Codigo</label>
                    <input type="text" name="codigo" id="codigo" class="campo-imput formulario__input" value="{{productoDB.codigo}}">     
                    <label for="garantia" class="formulario__label">Garantia</label>
                    <input type="text" name="garantia" id="garantia" class="campo-imput formulario__input" value="{{productoDB.garantia}}">     
                    <label for="stock" class="formulario__label">Stock</label>
                    <input type="text" name="stock" id="stock" class="campo-imput formulario__input--corto" value="{{productoDB.stock}}">
                    <label for="precio" class="formulario__label">Precio</label>
                    <input type="text" name="precio" id="precio" class="campo-imput formulario__input--corto" value="{{productoDB.precio}}">  
                </section>
            </article>
        </form>
        <textarea form="productForm" class="textoNota" name="descripcion">{{productoDB.descripcion}}</textarea>
        <input form="productForm" type="submit" value="Actualizar" class="campoBoton campoBoton--verdeOscuro">
        <a href="/producto" class="campoBoton campoBoton--azul">Cancelar</a>
    </section>

    <script src="/assets/js/main.js"></script>
    <script>
        funcionMostrarFoto();
    </script>