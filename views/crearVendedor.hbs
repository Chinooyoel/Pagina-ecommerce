{{> head }}

<div class="container">
    <div class="row">
        <div class="text-center my-2 col-lg-4 col-md-6 col-sm-8 offset-lg-4 offset-md-3 offset-sm-2">

            <form class="text-center" id='usuarioForm' method='POST' action='/usuario/crear'>

                <h2 class="text-center">Registrar Vendedor</h2>

                <div class="alert alert-danger" role="alert" id='alerta'></div>

                <section class="bg-gris mt-3 p-3">
                    <div class="mb-2 input-group">
                        <div class="input-group-prepend">
                            <span class="d-block input-group-text">
                                <i class="fas fa-user" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input placeholder="Ingresa tu nombre" class="form-control" name='nombre' maxlength='50' required>
                    </div>
                    <div class="mb-2 input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@</span>
                        </div>
                        <input placeholder="Ingresa tu e-mail" class="form-control" name='email' type='email'  maxlength='50' required>
                    </div>
                    <div class="mb-2 input-group">
                        <div class="input-group-prepend">
                            <span class="d-block input-group-text">
                                <i class="fas fa-unlock-alt" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input placeholder="Ingresa tu clave" type="password" class="form-control" name='password' maxlength='15' required>
                    </div>
                    <div class="mb-2 input-group">
                        <div class="input-group-prepend">
                            <span class="d-block input-group-text">
                                <i class="fas fa-unlock-alt" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input placeholder="Confirma tu clave" type="password" class="form-control" name='confirmarPassword' maxlength='15' required>
                    </div>
                    <div class="mb-2 input-group">
                        <select class='form-select' disabled>
                            <option>VENDEDOR</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-violeta">Registrar</button>
                </section>
            </form>
        </div>
    </div>
</div>

<script>
    registrarse()
</script>
{{> footer }}