{{>head}}
    {{> modal }}
    {{> modalLogin}}
        <section class="modal" id="modalCopiarEnlace">
            <section class="modalVentana modalCopiarEnlace">
            </section>
        </section>
        <section class="max1400">
            <section class="encabezado">
                <h3>{{ productoDB.Categoria }}</h3>
            </section>
            {{#if usuario.Admin }}
                <section class="panelControl">
                    <a href="/product/remove/{{productoDB.IdProducto}}" class="campoBoton campoBoton--azul">Eliminar Producto</a>
                    <a href="/product/update/{{productoDB.IdProducto}}" class="campoBoton campoBoton--azul">Editar Producto</a>
                    <a href="/admin" class="campoBoton campoBoton--azul">Inicio</a>
                </section>
            {{/if}}  
        </section>
        <section class="flex-contenedor max1400">
            <figure class="galeria__figure">
                <img src="/assets/img/producto/{{ productoDB.Img }}" class="galeria__figure--tamanioPerfil">
            </figure>
            <article class="caracteristicas">
                <h2 class="caracteristicas__titulo">{{ productoDB.Nombre }}</h2>
                <p class="caracteristicas__dato">CODIGO: {{productoDB.Codigo}} || MARCA: {{ productoDB.Marca }} || STOCK: {{ productoDB.Stock }}</p>
                <p class="caracteristicas__dato"><i class="fas fa-check-circle letraVerdeOscuro"></i> GARANTIA: {{ productoDB.Garantia}}</p>
                <h2 class="caracteristicas__titulo letraVerdeOscuro">PRECIO: ${{ productoDB.Precio }}.00</h2>
                <article class="flex-contenedor caracteristicas__dato">
                    <section>
                        <img src="/assets/img/americanExpressIcon.png">
                        <img src="/assets/img/visaIcon.png">
                        <img src="/assets/img/mastercardIcon.png">
                    </section>
                    <button class="campoBoton campoBoton--verdeOscuro"><i class="fas fa-shopping-cart "></i> AGREGAR</button>
                </article>

                <button class="campoBoton campoBoton--verdeOscuro"><i class="fas fa-shipping-fast"></i> CALCULAR ENVIO</button>
                <button class="campoBoton campoBoton--verdeOscuro abrirModalCopiarEnlace" id="botonCopiarEnlace"><i class="fas fa-clone"></i> COPIAR ENLANCE</button>

                <section class="caracteristicas__dato caracteristicas__infoPrecio">
                    <p>Precio deposito/transferencia: <span class="letraVerdeOscuro">${{ productoDB.Precio }}.00</span></p>
                    <p>Precio MercadoPago: <span class="letraVerdeOscuro">${{ precioLista }}.00</span></p>
                </section>
            </article>
        </section>
        <section></section>

        <section class="max1400 textoDescripcion">
            <h3 class="letraVerdeOscuro">DESCRIPCION</h3>
            <p >{{productoDB.Descripcion}}</p>
        </section>
            
        <!--*****************************SECCION PRODUCTOS-DESTACADOS**********************************-->        
        <section class="centro max1400">
            <h3 class="titulo">PRODUCTOS RELACIONADOS</h3>
            <article class="flex-contenedor">
                {{#each productosRelacionados }}
                <figure class="producto">
                    <a href="/product/profile/{{ IdProducto}}" class="producto__interaccionArticulo">
                        <img src="/assets/img/producto/{{ Img }}" class="producto__img">
                        <span class="producto__mas-info">[M√ÅS INFO]</span>
                        {{ Nombre }}
                    </a>
                    <figcaption class="producto__precio">ARS {{ Precio }}</figcaption>
                </figure>
                {{/each}}
            </article>
        </section>
    </section>

    <script>
        copiarEnlace();
    </script>
{{>footer}}