{{> head }}
<section class="container">
    <div class="row">
        <section class="col-12">
            <section class="col-12 justify-content-end d-flex mt-3">
                <a href="/admin" class="btn btn-violeta me-2">Inicio</a>
                <a href="/usuario/crear-vendedor" class="btn btn-violeta">Registrar Vendedor</a>
            </section>
            <h3 class="p-3 my-3 bg-dark text-white rounded-3">Panel de usuarios</h3>
            <form action="" class="row justify-content-center" id="buscarUsuario">
                <div class="col-12 col-sm-8 col-md-4 d-flex">
                    <input type="text" class="form-control" placeholder='Ingrese el email de usuario' name='nombre' required>
                    <button class="btn btn-violeta px-4">
                        <i class="fas fa-search" aria-hidden="true"></i>
                    </button>
                </div>
            </form>

            <article class='table-responsive my-3'>
                <table class="table table-striped table-bordered text-center align-item-center">
                    <thead>
                        <tr class='bg-dark text-white'>
                            <th scope='col' class="d-none d-md-table-cell">##</th>
                            <th scope='col'>Nombre</th>
                            <th scope='col'>Estado</th>
                            <th scope='col'>Email</th>
                            <th scope='col' class="d-none d-md-table-cell">Compras</th>
                            <th scope='col'>Accion</th>
                        </tr>
                    </thead>
                    <tbody id="tablaUsuario"></tbody>
                </table>
            </article>
        </section>
    </div>

</section>

<script>
    funcionBuscarUsuario();
</script>

{{> footer }}